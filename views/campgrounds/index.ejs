<% layout("layouts/boilerplate") %> 

<div id="cluster-map" class="d-none d-md-block"></div>

<h1 class="text-center py-3">All Campgrounds</h1>
  <% for(let campground of campgrounds) {%>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <% if(campground.images.length) {%> 
            <a href="/campgrounds/<%=campground._id%>"><img src="<%=campground.images[0].url%>" class="img-fluid" alt=""></a>
          <% }else {%> 
            <img src="https://res.cloudinary.com/dhiuj6txw/image/upload/v1611323549/YelpCamp/bufa039emjkcn3c9mr9f.jpg" class="img-fluid" alt="">
          <% } %> 
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <a href="/campgrounds/<%=campground._id%>" class="link-dark"><h5 class="card-title"><%= campground.title %> </h5></a>
            <p class="card-text"><%= campground.description %> </p>
            <p class="card-text">
              <small class="text-muted"><%= campground.location %> </small>
            </p>
            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View <%= campground.title %> </a>
          </div>
        </div>
      </div>
    </div>
  <% } %> 
  
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>