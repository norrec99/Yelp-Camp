<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Campground</title>
</head>
<body>
  <h1>Edit Campground</h1>
  <h2><%= campground.title %></h1>
  <h2>Location: <%= campground.location %></h2>
  <form action="/campgrounds/<%= campground._id %>?_method=PATCH" method="POST">
    <div>
      <label for="title">Campground Title</label>
      <input type="text" name="campground[title]" id="title" value="<%= campground.title %>">
    </div>
    <div>
      <label for="location">Location</label>
      <input type="text" name="campground[location]" id="location" value="<%= campground.location %>">
    </div>
    <button>Update Campground</button>
  </form>
  <a href="/campgrounds/<%= campground._id%>">Cancel</a>
</body>
</html>